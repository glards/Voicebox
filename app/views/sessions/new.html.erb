<h1>Sign in</h1>
<%= form_for(:session, url: login_path, html: { class: "form-stacked" }) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <%= f.text_field :email, class: "input-" %>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", class: ["btn", "primary"] %> <%= link_to "Cancel", root_path, class: "btn" %>
  </div>
<% end %>
